<openerp>
    <data>

        <!-- Product Packaging Tree View -->
        <record id="product_packaging_view_tree" model="ir.ui.view">
            <field name="name">product.packaging.tree.view</field>
            <field name="model">product.packaging</field>
            <field name="inherit_id" ref="product.product_packaging_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty']" position="after">
                    <field name="length" />
                    <field name="width" />
                    <field name="height" />
                    <field name="dimensional_uom_id" />
                </xpath>
            </field>
        </record>

        <!-- Product Packaging Form View -->
        <record  id="product_packaging_view_form" model="ir.ui.view">
            <field name="name">product.packaging.form.view</field>
            <field name="model">product.packaging</field>
            <field name="inherit_id" ref="product.product_packaging_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group>
                        <group>
                            <field name="length" />
                            <field name="width" />
                            <field name="height" />
                            <field name="dimensional_uom_id" />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
