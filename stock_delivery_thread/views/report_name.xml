<openerp>
  <data>

    <record id="stock_delivery_group_form_view" model="ir.ui.view">
      <field name="name">stock.delivery.group.form</field>
      <field name="model">stock.delivery.group</field>
      <field name="inherit_id" ref="stock_delivery.stock_delivery_group_form_view"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//sheet" position="after">
            <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers"/>
              <field name="message_ids" widget="mail_thread"/>
            </div>
          </xpath>
        </data>
      </field>
    </record>

  </data>
</openerp>
