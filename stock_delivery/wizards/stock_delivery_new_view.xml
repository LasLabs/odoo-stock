<odoo>

    <record id="stock_delivery_new_view_form" model="ir.ui.view">
        <field name="name">stock.delivery.new.view.form</field>
        <field name="model">stock.delivery.new</field>
        <field name="arch" type="xml">
            <form string="Delivery Information">
                <sheet>
                    <group>
                        <field name="delivery_pack_id"
                               domain="[('quant_pack_id', '=', quant_pack_id)]"
                               context="{'default_quant_pack_id': quant_pack_id,
                                         'default_pack_operation_ids': pack_operation_ids,
                                         }">
                            <form string="Delivery Package">
                                <sheet>
                                    <group>
                                        <field name="name" />
                                        <field name="pack_template_id" />
                                    </group>
                                    <group string="Physical">
                                        <group>
                                            <field name="length" />
                                            <field name="width" />
                                            <field name="height" />
                                            <field name="weight" />
                                        </group>
                                        <group>
                                            <field name="length_uom_id" />
                                            <field name="width_uom_id" />
                                            <field name="height_uom_id" />
                                            <field name="weight_uom_id" />
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                        <field name="quant_pack_id" />
                        <field name="pack_operation_ids">
                            <tree>
                                <field name="product_id" />
                                <field name="qty_done" />
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_delivery"
                            type="object"
                            string="Delivery"
                            class="oe_highlight"/>
                    or
                    <button special="cancel"
                            string="No Delivery"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_delivery_new_action" model="ir.actions.act_window">
        <field name="name">New Delivery</field>
        <field name="res_model">stock.delivery.new</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_delivery_new_view_form"/>
    </record>

</odoo>
